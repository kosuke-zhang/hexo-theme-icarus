<% const playlistid = get_config_from_obj(widget, 'playlist-id'); %> 
<% if (playlistid !== null) { %> <!-- 判断config.yml中有没有playlistid -->
<div class="card widget">
    <div class="card-content">
        <h3 class="menu-label">
            <%= __('widget.cloudmusic') %> <!-- 获取语言文件 -->
        </h3>
        <!-- 网易云外链播放器 -->
        <!-- style="width: 100%; height: 60vh;" 100%宽度，60vh高度 = 60%页面可视高度-->
        <iframe id="cloudmusic" frameborder="no" border="0" marginwidth="0" marginheight="0"
            style="width: 100%; height: 301px;" src="//music.163.com/outchain/player?type=0&id=<%= playlistid %>&auto=0"></iframe>
    </div>
</div>
<% } %>